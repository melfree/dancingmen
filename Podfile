source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '8.0'
use_frameworks!

def pods
  pod 'Font-Awesome-Swift', '~> 1.1.0'
end

def testing_pods
  # If you're using Xcode 6 / Swift 1.2
  pod 'Quick', '~> 0.3.0'
  pod 'Nimble', '~> 1.0.0'
end

target 'DancingMen' do
  pods
end

target 'DancingMenTests' do
  pods
  testing_pods
end